<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/images" />
    <TextView
        android:id="@+id/businessname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to koffemate"
        android:layout_centerHorizontal="true"
         />


    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:08099229834"
        android:layout_above="@id/email_text_view"
        />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:koleibrahimabdulrahman@gmail.com"
        android:layout_above="@id/website_text_view"

        />

    <TextView
        android:id="@+id/website_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website:www.koleibrahimabdulrahman.com"
        android:layout_above="@id/address_text_view"

        />
    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:Block b3,off ahmadu bello way victoria island, Lagos, Nigeria"
        android:layout_above="@id/operation_text_view"

        />
    <TextView
        android:id="@+id/operation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hours of operation:7AM-9pm"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>